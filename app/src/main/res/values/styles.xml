<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="BigButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="PowerButton" parent="BigButton">
        <item name="android:backgroundTint">@color/button_red</item>
    </style>

    <style name="NavigationButton" parent="BigButton">
        <item name="android:backgroundTint">@color/button_blue</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="VolumeButton" parent="BigButton">
        <item name="android:backgroundTint">@color/button_green</item>
    </style>

    <style name="ChannelButton" parent="BigButton">
        <item name="android:backgroundTint">@color/button_orange</item>
    </style>
</resources>
