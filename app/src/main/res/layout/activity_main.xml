<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Pantalla Remoto -->
        <FrameLayout
            android:id="@+id/remoteLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:spacing="8dp">

                <!-- Título -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remote_title"
                    android:textSize="28sp"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- Controles de Poder y Volumen -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:spacing="12dp">

                    <Button
                        android:id="@+id/btnPower"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="@string/btn_power"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/btn_power_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnVolUp"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="@string/btn_vol_up"
                        android:textSize="16sp"
                        android:background="@drawable/btn_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnVolDown"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="@string/btn_vol_down"
                        android:textSize="16sp"
                        android:background="@drawable/btn_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnMute"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="@string/btn_mute"
                        android:textSize="16sp"
                        android:background="@drawable/btn_style"
                        android:textColor="@color/text_white" />
                </LinearLayout>

                <!-- Controles Direccionales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/btnUp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="@string/btn_up"
                        android:textSize="24sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/btn_dpad_style"
                        android:textColor="@color/text_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:spacing="12dp"
                        android:layout_marginVertical="8dp">

                        <Button
                            android:id="@+id/btnLeft"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="@string/btn_left"
                            android:textSize="24sp"
                            android:background="@drawable/btn_dpad_style"
                            android:textColor="@color/text_white" />

                        <Button
                            android:id="@+id/btnSelect"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="@string/btn_select"
                            android:textSize="16sp"
                            android:background="@drawable/btn_center_style"
                            android:textColor="@color/text_white" />

                        <Button
                            android:id="@+id/btnRight"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="@string/btn_right"
                            android:textSize="24sp"
                            android:background="@drawable/btn_dpad_style"
                            android:textColor="@color/text_white" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnDown"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="@string/btn_down"
                        android:textSize="24sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/btn_dpad_style"
                        android:textColor="@color/text_white" />
                </LinearLayout>

                <!-- Botones de Función -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:spacing="12dp"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/btnHome"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="@string/btn_home"
                        android:textSize="14sp"
                        android:background="@drawable/btn_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnBack"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="@string/btn_back"
                        android:textSize="14sp"
                        android:background="@drawable/btn_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnApps"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="@string/btn_apps"
                        android:textSize="14sp"
                        android:background="@drawable/btn_apps_style"
                        android:textColor="@color/text_white" />
                </LinearLayout>

                <!-- Números -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:rowCount="2"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/btnNum1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="1"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnNum2"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="2"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnNum3"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="3"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnNum4"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="4"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnNum5"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="5"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="0"
                        android:layout_column="4"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnNum6"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="6"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnNum7"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="7"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnNum8"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="8"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnNum9"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="9"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />

                    <Button
                        android:id="@+id/btnNum0"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="0"
                        android:textSize="18sp"
                        android:layout_columnWeight="1"
                        android:layout_row="1"
                        android:layout_column="4"
                        android:layout_margin="4dp"
                        android:background="@drawable/btn_num_style"
                        android:textColor="@color/text_white" />
                </GridLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Pantalla de Aplicaciones -->
        <FrameLayout
            android:id="@+id/appsLayout"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apps_title"
                    android:textSize="28sp"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/appsRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnBackFromApps"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/btn_back"
                    android:textSize="18sp"
                    android:background="@drawable/btn_style"
                    android:textColor="@color/text_white"
                    android:layout_gravity="bottom" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</ScrollView>
