<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- SETUP WIZARD -->
    <ScrollView
        android:id="@+id/setupWizard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/wizardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¡Bienvenido!"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/wizardMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ConfiguraciÃ³n inicial"
                android:textSize="24sp"
                android:textColor="#CCCCCC"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="30dp"/>

            <ProgressBar
                android:id="@+id/searchProgress"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/tvFoundList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>

            <!-- Manual IP Input -->
            <LinearLayout
                android:id="@+id/manualIpLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresa la IP del TV:"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/ipPart1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textSize="32sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:maxLength="3"
                        android:background="@drawable/button_bg"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:textSize="40sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/ipPart2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textSize="32sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:maxLength="3"
                        android:background="@drawable/button_bg"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:textSize="40sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/ipPart3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textSize="32sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:maxLength="3"
                        android:background="@drawable/button_bg"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:textSize="40sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/ipPart4"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textSize="32sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:maxLength="3"
                        android:background="@drawable/button_bg"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnConnectManual"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:text="âœ“ CONECTAR"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_ok"
                    android:layout_marginTop="30dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnSearchTV"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="ðŸ” BUSCAR TV"
                android:textSize="28sp"
                android:textStyle="bold"
                android:background="@drawable/button_ok"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/btnManualIP"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="âŒ¨ï¸ INGRESAR IP"
                android:textSize="28sp"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/btnHelp"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="â“ AYUDA"
                android:textSize="28sp"
                android:textStyle="bold"
                android:background="@drawable/button_bg"/>

        </LinearLayout>

    </ScrollView>

    <!-- REMOTE CONTROL -->
    <ScrollView
        android:id="@+id/remoteLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi TV"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/reconnectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ CONECTADO"
                android:textSize="18sp"
                android:padding="15dp"
                android:background="@drawable/button_ok"
                android:enabled="false"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnPower"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:text="â»"
                android:textSize="40sp"
                android:textStyle="bold"
                android:background="@drawable/button_power"
                android:layout_marginBottom="20dp"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <Button
                    android:id="@+id/btnUp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="â–²"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:layout_margin="5dp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <Button
                    android:id="@+id/btnLeft"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="â—„"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="OK"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_ok"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btnRight"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="â–º"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:layout_margin="5dp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <Button
                    android:id="@+id/btnDown"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="â–¼"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:layout_margin="5dp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </GridLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="VOLVER"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/btnHome"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="INICIO"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VOLUMEN"
                android:textSize="24sp"
                android:textColor="#FFBB00"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVolDown"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="âˆ’"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/btnVolUp"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:text="+"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>